<MainScreen>:
    name: "main"

    lb1: label1
    lb2: label2

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: btn2
        text: "off"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.turn_on()
        on_release: root.turn_off()

    DPEAButton:
        text: root.counter
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.add_one()


    DPEAButton:
        size: 100, 100
        x: root.width * 0.20
        y: root.height * 0.8
        background_color: 0,0,0,0
        on_release: root.move_to_third()

        Image:
            source: 'images3.jpeg'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: self.parent.size


    DPEAButton:
        text: "Slider Page"
        size: 100, 50
        x: root.width * 0.4
        y: root.height * 0.5
        on_release: root.move_to_second()

    Button:
        text: "Press Me!"
        size_hint: .2, .2
        pos_hint: {"center_x": 0.5}
        on_press: root.animate_it(self)
        on_release: root.move_to_third()

        Image:
            source: 'images3.jpeg'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: self.parent.size


    DPEAButton:
        text: "Toggle Motor"
        size: 100, 100
        x: root.width * 0.10
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.change_label()

    Label:
        id: label1
        font_size:40
        x: root.width * 0.10
        y: root.height * 0.4
        color: 1, 0, 0.7, 1
        text: "Motor Off"



    Label:
        id: label2
        font_size: 30
        pos_hint: {"center_x": 0.2}
        pos_hint: {"center_y": 0.3}
        color: 1, 0, 0.7, 1
        text: "Joystick Pos"



<SecondWindow>:
    name: 'second'


    Label:
        id: labelvalue
        font_size:40
        color: 1, 0, 0.7, 1
        text: "This is the value of slider"

    Slider:
        id:slidervalue
        min:1
        max:100
        step:1
        top: 5
        on_value:root.sliderfunction(*args)


    DPEAButton:
        text: "Go Back"
        size: 100, 50
        x: root.width * 0.5
        y: root.height * 0.05
        on_release: root.go_home()

<ThirdWindow>:
    name: "third"

    DPEAButton:
        text: "Go Back"
        size_hint: .15, .12
        background_color: 0,0,0,0
        pos_hint: {'center_x': 0.5, 'center_y': 0.5 }

        on_press: root.click()
        on_release: root.off_click()

        Image:
            id: my_image
            source: 'images.jpeg'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: self.parent.size

    Button:
        text: "Press Me!"
        size_hint: .2, .2
        pos_hint: {"center_x": 0.5}
        on_release: root.anima(self)
        on_release: root.go_home()


        Image:
            source: 'images3.jpeg'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            size: self.parent.size


